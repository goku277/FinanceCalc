<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:id="@+id/description_dialog_id"/>

    <EditText
        android:id="@+id/income_dialog_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Money incurred"
        android:layout_below="@+id/description_dialog_id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Extra note"
        android:layout_below="@+id/income_dialog_id"
        android:id="@+id/note_dialog_id"/>


</RelativeLayout>